<idea-plugin>
    <id>com.hxl.plugin.springboot-invoke</id>

    <name>SpringBootInvoke</name>

    <vendor email="2606710413@qq.com" url="https://www.houxinlin.com">HouXinLin</vendor>
    <description><![CDATA[
        <h1>This is an exciting plug-in</h1>
        <p>It is used to solve the call of the Controller method and the regular timer method. It is very convenient.</p>

        <h2>Steps for usage:</h2>
        <ol>
          <li>Install it</li>
          <li>Select SpringBeanInvoke in View â†’ tool window</li>
          <li>Restart your project</li>
        </ol>
        <p>After the project is started, all timer and controller methods will be displayed. Double-click to call.</p>

  ]]></description>
    <depends>com.intellij.modules.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <java.programPatcher implementation="com.hxl.plugin.springboot.invoke.ProjectJavaProgramPatcher"/>

        <toolWindow id="SpringBootInvoke" secondary="true" icon="MyIcons.MAIN" anchor="right"
                    factoryClass="com.hxl.plugin.springboot.invoke.view.SpringInvokeToolWindowFactory"/>

    </extensions>

    <actions>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <projectListeners>

    </projectListeners>
</idea-plugin>